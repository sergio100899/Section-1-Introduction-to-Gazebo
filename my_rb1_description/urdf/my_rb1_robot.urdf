<?xml version="1.0" ?>

<robot name="rb1_robot">

    <gazebo reference="base_link">
        <material>Gazebo/Black</material>
    </gazebo>

    <gazebo reference="right_wheel">
        <material>Gazebo/Grey</material>
    </gazebo>

    <gazebo reference="left_wheel">
        <material>Gazebo/Grey</material>
    </gazebo>

    <gazebo reference="front_caster">
        <material>Gazebo/Grey</material>
    </gazebo>

    <gazebo reference="back_caster">
        <material>Gazebo/Grey</material>
    </gazebo>

    <gazebo reference="front_laser">
        <material>Gazebo/Blue</material>
    </gazebo>

    <!-- Base_footprint -->
    <link name="base_footprint"/>

    <joint name="joint_base_footprint_base_link" type="fixed">
        <parent link="base_footprint"/>
        <child link="base_link"/>
        <origin xyz="0 0 0.15" rpy="0 0 0"/>
    </joint>

    <!-- Link - base_link -->
    <link name="base_link">
        <inertial>
            <mass value="16" />
            <origin xyz="0 0 0" rpy="0 0 0" />
            <inertia ixx="0.37" ixy="0" ixz="0" iyy="0.37" iyz="0" izz="0.5" />
        </inertial>

        <collision>
            <geometry>
                <cylinder length="0.3" radius="0.25"/>
            </geometry>
        </collision>

        <visual>
            <geometry>
                <cylinder length="0.3" radius="0.25"/>
            </geometry>

            <material name="blue">
                <color rgba="0 0 1 0.4"/>
            </material>
        </visual>
    </link>

    <joint name="joint_base_right_wheel" type="continuous">
        <parent link="base_link"/>
        <child link="right_wheel"/>
        <origin rpy="0 0 0"  xyz="0 -0.2 -0.15"/>        
        <axis rpy="0 0 0" xyz="0 1 0"/>
    </joint>

    <!-- Link right_wheel -->
    <link name="right_wheel">
        <inertial>
            <mass value="3" />
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <inertia ixx="0.0009375" ixy="0" ixz="0" iyy="0.00109375" iyz="0" izz="0.00109375"/>
        </inertial>

        <collision>
            <origin rpy="1.5707 0 0" xyz="0 0 0" />
            <geometry>
                <cylinder length="0.05" radius="0.025" />
            </geometry>
        </collision>

        <visual>
            <origin rpy="1.5707 0 0" xyz="0 0 0" />
            <geometry>
                <cylinder length="0.05" radius="0.025" />
            </geometry>
            <material name="red">
                <color rgba="1 0 0 0.8"/>
            </material>
        </visual>

    </link>

    <joint name="joint_base_left_wheel" type="continuous">
        <parent link="base_link"/>
        <child link="left_wheel"/>
        <origin rpy="0 0 0"  xyz="0 0.2 -0.15"/>        
        <axis rpy="0 0 0" xyz="0 1 0"/>
    </joint>

    <!-- Link left_wheel -->
    <link name="left_wheel">
        <inertial>
            <mass value="3" />
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <inertia ixx="0.0009375" ixy="0" ixz="0" iyy="0.00109375" iyz="0" izz="0.00109375"/>
        </inertial>

        <collision>
            <origin rpy="-1.5707 0 0" xyz="0 0 0"/>
            <geometry>
                <cylinder length="0.05" radius="0.025" />
            </geometry>
        </collision>


        <visual>
            <origin rpy="-1.5707 0 0" xyz="0 0 0"/>
            <geometry>
                <cylinder length="0.05" radius="0.025" />
            </geometry>
            <material name="red">
                <color rgba="1 0 0 0.8"/>
            </material>
        </visual>

    </link>

    <joint name="joint_base_link_front_caster" type="fixed">
        <parent link="base_link" />
        <child link="front_caster" />
        <origin rpy="0 0 0" xyz="0.1 0 -0.15" />
    </joint>

    <!-- Link front_caster -->
    <link name="front_caster">
        <inertial>
            <mass value="1.25" />
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <inertia ixx="0.0003125" ixy="0" ixz="0" iyy="0.0003125" iyz="0" izz="0.0003125"/>            
        </inertial>

        <collision>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <geometry>
                <sphere radius="0.025"/>
            </geometry>
        </collision>

        <visual>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <geometry>
                <sphere radius="0.025"/>
            </geometry>
        </visual>
    </link>

    <joint name="joint_base_link_back_caster" type="fixed">
        <parent link="base_link" />
        <child link="back_caster" />
        <origin rpy="0 0 0" xyz="-0.1 0 -0.15" />
    </joint>

    <!-- Link back_caster -->
    <link name="back_caster">
        <inertial>
            <mass value="1.25" />
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <inertia ixx="0.0003125" ixy="0" ixz="0" iyy="0.0003125" iyz="0" izz="0.0003125"/>            
        </inertial>

        <collision>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <geometry>
                <sphere radius="0.025"/>
            </geometry>
        </collision>

        <visual>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <geometry>
                <sphere radius="0.025"/>
            </geometry>
        </visual>
    </link>

    <joint name="joint_base_link_front_laser" type="fixed">
        <parent link="base_link"/>
        <child link="front_laser"/>
        <origin rpy="3.1416 0 0" xyz="0.25 0 0.075"/>
    </joint>

    <!-- Link front_laser -->
    <link name="front_laser">
        <inertial>
            <mass value="0.5" />
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <inertia ixx="0.0000667" ixy="0" ixz="0" iyy="0.0000667" iyz="0" izz="0.0002"/>         
        </inertial>
        <collision>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <geometry>
                <cylinder length="0.02" radius="0.02"/>
            </geometry>
        </collision>

        <visual>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <geometry>
                <cylinder length="0.02" radius="0.02"/>
            </geometry>
        </visual>
    </link>

</robot>